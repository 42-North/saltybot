{
  "manifest_version": 2,

  "name": "Salty Bot",
  "description": "salt",
  "version": "1.0",

  "permissions": [
    "http://127.0.0.1:5000/*",
    "tabs",
    "notifications"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [{
        "run_at": "document_end",
        "matches": ["http://www.saltybet.com/"],
        "js": ["jquery-2.1.3.min.js", "content.js"]
  }],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  }
}